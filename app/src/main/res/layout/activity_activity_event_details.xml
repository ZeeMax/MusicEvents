<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/bg"
                tools:context="nairuz.com.musicevents.ActivityEventDetails">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/detsBandImage"
        android:layout_centerHorizontal ="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@drawable/row_bg"
        />

    <TextView
        android:id="@+id/detsHeadLines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Headline"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/detsBandImage"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/detsVenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venue"
        android:layout_below="@+id/detsHeadLines"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/detsWhere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where"
        android:layout_below="@+id/detsVenue"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/detsWhen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When"
        android:layout_below="@+id/detsWhere"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        />






</RelativeLayout>
